<div class="container">
  <h1>All parts for <%= @project.name %></h1>
  <% ['verification', 'shipped', 'shipping', 'printed', 'printing', 'accepted', 'unclaimed'].each do |state| %>
    <div class="container">
    <h2><%= state_name(state) %> (<%= @parts[state].nil? ? 0 : @parts[state].size %>)</h2>
    <p><%= state_description(state) %></p>
    <% if @parts[state].nil? %>
      <p>No parts are currently in '<%= state %>'</p>
    <% else %>
      <%= render partial: "#{state}_part", collection: @parts[state] %>
    <% end %>
    </div>
  <% end %>
</div>
