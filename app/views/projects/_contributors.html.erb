<% if people.size > 0 %>
  <h3>Contributors</h3>
  <p>Our thanks to all the people who are making this project happen!</p>
  <ul class="contributors">
    <% people.each do |person| %>
      <li>
        <img class="img-circle" data-src="<%= person.avatar %>" src="<%= person.avatar %>" alt="<%= person.name %> (<%= pluralize(person.part_count, "Part") %>)" title="<%= person.name %> (<%= pluralize(person.part_count, "Part") %>)" />
        <% if person.part_count > 1 %>
          <span class="part-count"><%= person.part_count %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
